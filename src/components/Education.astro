---
import { Icon } from "astro-icon/components";
import SectionContainer from "./SectionContainer.astro";

const programs = [
  {
    name: "Web and Mobile App Development",
    date: "January 2022 - April 2023",
    institution: "Langara College, BC",
  },
  {
    name: "Business Foundations",
    date: "May 2021 - November 2021",
    institution: "SELC College, BC",
  },
  {
    name: "Psychology",
    date: "March 2008 - October 2013",
    institution: "Universidad Alberto Hurtado, Chile",
  },
];
---

<div class="flex flex-col">
  <SectionContainer
    id="education"
    title="Education"
    iconName="mdi:education-outline"
  >
    <article class="relative border-s border-current max-w-[480px]">
      {
        programs.map((program) => (
          <div class="mb-10 ms-8">
            <span class="absolute flex items-center justify-center size-6 bg-yellow-600 rounded-full -start-3 ring-8 ring-yellow-600">
              <Icon name="mdi:certificate-outline" size={22} />
            </span>
            <h3 class="flex items-center mb-1 text-xl font-semibold">
              {program.name}
            </h3>
            <time class="block mb-2 text-sm leading-none">{program.date}</time>
            <p class="mb-4">{program.institution}</p>
          </div>
        ))
      }
    </article>
  </SectionContainer>
</div>
