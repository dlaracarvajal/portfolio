---
import { Icon } from "astro-icon/components";
import Social from "./Social.astro";
const links = [
  { label: "About", href: "#about" },
  { label: "Contact", href: "#contact" },
];
---

<footer class="flex flex-col gap-3 mt-8">
  <div
    class="flex gap-1 flex-col justify-center md:flex-row md:justify-between items-center"
  >
    <Icon name="logo" />
    <nav>
      <ul class="flex gap-6">
        {
          links.map((link) => (
            <li class="footerLinks">
              <a href={link.href}>{link.label}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
  <hr class="border-gray-300" />
  <div class="flex justify-center">
    <p class="text-center text-balance">
      &copy; 2024 Diego Lara Carvajal. Design inspired by <a
        href="https://porfolio.dev/"
        class="hover:underline">Midudev's portfolio</a
      >.
    </p>
  </div>
  <div class="flex justify-center gap-3">
    <Social />
  </div>
</footer>
